<!DOCTYPE html>
<h3>Авторы</h3>

<table class="table table-hover">

	<thead>		
		<th>
			<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Автор
		</th>
		<th>
			<span class="glyphicon glyphicon-book" aria-hidden="true"></span> Количество книг
		</th>
	</thead>
	
<% @authors.each do |x| %>		

	<tr>		
		<td>					
			<a href="/author/<%=x.id%>"><%= x.name %></a>				
		</td>
		<td>		
			<a href="/author/<%=x.id%>"><%= x.books.size %></a>	
		<td>
	</tr>

<% end %>
  
</table>